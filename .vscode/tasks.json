{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-mingw32-make",
            "type": "shell",
            "command": "cmake",
            "args": [
                ".",
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
            ],
            "group": "none"
        },
        {
            "label": "make-mingw32-make",
            "type": "shell",
            "command": "mingw32-make",
            "args": [],
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "cmake-mingw32-make",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-docs",
            "type": "shell",
            "command": "doxygen",
            "args": [
                "Doxyfile",
            ],
            "problemMatcher": [],
            "group": "none"
        },
        {
            "label": "push-docs",
            "type": "shell",
            "command": "git",
            "args": [
                "subtree",
                "push",
                "--prefix",
                "docs/doxygen/html",
                "origin",
                "gh-pages"
            ],
            "dependsOn": [
                "build-docs",
            ],
            "problemMatcher": [],
            "group": "none"
        }
    ]
}